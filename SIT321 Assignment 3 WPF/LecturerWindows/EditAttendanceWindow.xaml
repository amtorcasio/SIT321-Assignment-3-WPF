<Window x:Class="SIT321_Assignment_3_WPF.LecturerWindows.EditAttendanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIT321_Assignment_3_WPF.LecturerWindows"
        mc:Ignorable="d"
        Title="Edit Attendance" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="ToolWindow" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Closed="Window_Closed" Width="291">
    <Grid Margin="0" HorizontalAlignment="Left" Width="281">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="lblUnit" Content="Unit:" Margin="10,5" VerticalAlignment="Center" Grid.ColumnSpan="2" Focusable="True" Grid.Row="1" Height="26" HorizontalAlignment="Left" Width="261"/>
        <Label x:Name="label1" Content="Lecture Attendance" HorizontalAlignment="Left" Margin="10,5,0,5" Grid.Row="2" VerticalAlignment="Center" Height="26" Width="113"/>
        <Label x:Name="label1_Copy" Content="Practical Attendance" HorizontalAlignment="Left" Margin="10,5,0,5" Grid.Row="3" VerticalAlignment="Center" Height="26" Width="118"/>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="10,5,0,5" Grid.Row="4" VerticalAlignment="Center" Width="121" Grid.Column="1" Height="27" IsDefault="True" IsTabStop="False" TabIndex="4" Click="btnSubmit_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,5,0,5" Grid.Row="4" VerticalAlignment="Center" Width="120" Height="27" TabIndex="3" Click="btnCancel_Click"/>
        <TextBox x:Name="txtLectureAttendance" HorizontalAlignment="Center" Height="26" Margin="10,5" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="121" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SnapsToDevicePixels="True" TabIndex="1" Grid.Column="1"/>
        <TextBox x:Name="txtPracticalAttendance" HorizontalAlignment="Left" Height="26" Margin="10,5" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Center" Width="121" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SnapsToDevicePixels="True" TabIndex="2" Grid.Column="1"/>
        <Label x:Name="lblStudent" Content="Student:" Margin="10,5" Grid.ColumnSpan="2" Focusable="True" VerticalAlignment="Center" Height="26" HorizontalAlignment="Left" Width="261"/>
    </Grid>
</Window>
