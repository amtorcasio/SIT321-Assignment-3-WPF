<Window x:Class="SIT321_Assignment_3_WPF.MainWindows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIT321_Assignment_3_WPF"
        mc:Ignorable="d"
        Title="AdminWindow" Height="460" Width="810" ResizeMode="CanMinimize" SizeToContent="Manual">
    <Grid>
        <Grid Name="gridUserDetails" HorizontalAlignment="Left" Height="60" Margin="10,10,0,0" VerticalAlignment="Top" Width="180" />
        <Label Content="Units currently in Database" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top"/>
        <Label Content="Users currently in Database" HorizontalAlignment="Left" Margin="404,95,0,0" VerticalAlignment="Top"/>
        <ListBox HorizontalAlignment="Left" Height="257" Margin="10,126,0,0" VerticalAlignment="Top" Width="380"/>
        <ListBox HorizontalAlignment="Left" Height="257" Margin="404,126,0,0" VerticalAlignment="Top" Width="380"/>
        <TextBox Name="txtDBQuery" HorizontalAlignment="Left" Height="24" Margin="534,391,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" VerticalContentAlignment="Center" KeyDown="txtDBQuery_KeyDown"/>
        <RadioButton Name="DBFilterUsers" Content="Search users" HorizontalAlignment="Left" Margin="438,395,0,0" Padding="5,0,5,0" VerticalAlignment="Top" Checked="DBFilterUsers_Checked"/>
        <RadioButton Name="DBFilterUnits" Content="Search units" HorizontalAlignment="Left" Margin="344,395,0,0" Padding="5,0,5,0" VerticalAlignment="Top" Checked="DBFilterUnits_Checked"/>
        <Button Name="btnAddUser" Content="Add new User" HorizontalAlignment="Left" Margin="688,95,0,0" Padding="10,5" VerticalAlignment="Top" Width="Auto" Click="btnAddUser_Click"/>

    </Grid>
</Window>
