<Window x:Class="SIT321_Assignment_3_WPF.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIT321_Assignment_3_WPF"
        mc:Ignorable="d"
        Title="AdminWindow" Height="540" Width="960" ResizeMode="CanMinimize" SizeToContent="Manual" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Name="gridUserDetails" HorizontalAlignment="Left" Height="60" Margin="10,10,0,0" VerticalAlignment="Top" Width="180" />
        <Label Content="Units currently in Database" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top"/>
        <Label Content="Users currently in Database" HorizontalAlignment="Left" Margin="494,90,0,0" VerticalAlignment="Top"/>
        <ListBox Name="listUnits" HorizontalAlignment="Left" Height="290" Margin="10,121,0,0" VerticalAlignment="Top" Width="450"/>
        <ListBox Name="listUsers" HorizontalAlignment="Left" Height="290" Margin="494,121,0,0" VerticalAlignment="Top" Width="450"/>
        <TextBox Name="txtDBQuery" HorizontalAlignment="Left" Height="30" Margin="694,471,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" VerticalContentAlignment="Center" KeyDown="txtDBQuery_KeyDown"/>
        <RadioButton Name="DBFilterUsers" Content="Search users" HorizontalAlignment="Left" Margin="604,479,0,0" VerticalAlignment="Top" Click="DBFilterUsers_Click"/>
        <RadioButton Name="DBFilterUnits" Content="Search units" HorizontalAlignment="Left" Margin="516,479,0,0" VerticalAlignment="Top" Click="DBFilterUnits_Click"/>
        <Button Name="btnAddUser" Content="Add new User" HorizontalAlignment="Left" Margin="848,416,0,0" Padding="10,5,10,5" VerticalAlignment="Top" Width="Auto" Click="btnAddUser_Click" Height="Auto"/>
        <Button x:Name="btnSuspendUser" Content="Suspend User" HorizontalAlignment="Left" Margin="747,416,0,0" Padding="10,5,10,5" VerticalAlignment="Top" Width="Auto" Click="btnAddUser_Click" Height="Auto"/>
        <Button x:Name="btnTerminateUser" Content="Terminate User" HorizontalAlignment="Left" Margin="641,416,0,0" Padding="10,5,10,5" VerticalAlignment="Top" Width="Auto" Click="btnAddUser_Click" Height="Auto"/>
        <Button x:Name="btnEditUser" Content="Edit User" HorizontalAlignment="Left" Margin="567,416,0,0" Padding="10,5,10,5" VerticalAlignment="Top" Width="Auto" Click="btnAddUser_Click" Height="Auto"/>

    </Grid>
</Window>
