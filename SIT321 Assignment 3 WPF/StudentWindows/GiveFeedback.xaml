<Window x:Class="SIT321_Assignment_3_WPF.StudentWindows.GiveFeedback"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIT321_Assignment_3_WPF.StudentWindows"
        mc:Ignorable="d"
        Title="GiveFeedback" Height="250" Width="680">

    <Grid>
        <Label Content="Subject" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSubject" HorizontalAlignment="Left" Height="23" Margin="77,10,0,0" TextWrapping="Wrap" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="585"/>
        <TextBox x:Name="txtComment" HorizontalAlignment="Left" Height="133" Margin="77,43,0,0" TextWrapping="Wrap" Padding="5,5,5,5" VerticalAlignment="Top" Width="585"/>
        <Button x:Name="btnPostComment" Background="#54e5be" BorderBrush="#3ed1a9" Content="Post" HorizontalAlignment="Left" Margin="507,181,0,0" Padding="10,5,10,5" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="587,181,0,0" Padding="10,5,10,5" VerticalAlignment="Top" Width="75"/>
        <Label Content="Comment" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
